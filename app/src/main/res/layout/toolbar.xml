<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:minHeight="?actionBarSize"
    android:theme="?actionBarTheme"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:titleMargin="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:gravity="center"
            app:drawableBottomCompat="@drawable/ic_baseline_summarize_24"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingBottom="10dp"

            app:drawableBottomCompat="@drawable/ic_baseline_calendar_month_24"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/mainActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingBottom="10dp"

            app:drawableBottomCompat="@drawable/ic_baseline_home_24"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingBottom="10dp"

            app:drawableBottomCompat="@drawable/ic_baseline_directions_car_24"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingBottom="10dp"

            app:drawableBottomCompat="@drawable/ic_baseline_more_horiz_24"
            app:cornerRadius="0dp" />
    </LinearLayout>


</androidx.appcompat.widget.Toolbar>