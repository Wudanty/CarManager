<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/textViewEksCo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Co"
            />
        <TextView
            android:id="@+id/textViewEksCena"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cena"
            />
        <TextView
            android:id="@+id/textViewEksGdzie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gdzie"
            />
        <TextView
        android:id="@+id/textViewEksData"
            android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:text="Data"
        />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewEksPrzebieg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nast. przebieg"
            />

        <TextView
        android:id="@+id/textViewEksDoKiedy"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Do kiedy"
        />
    </LinearLayout>

</LinearLayout>